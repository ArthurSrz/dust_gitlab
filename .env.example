# GitLab Configuration
GITLAB_PERSONAL_ACCESS_TOKEN=your_gitlab_pat_here
GITLAB_API_URL=https://gitlab.com/api/v4

# MCP Authentication (for Dust.tt)
MCP_AUTH_SECRET=your_random_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional GitLab Features (@zereight/mcp-gitlab package)
# Enable these for additional capabilities beyond the core tools
USE_GITLAB_WIKI=false       # Enable Wiki API tools
USE_MILESTONE=false         # Enable Milestone management tools
USE_PIPELINE=false          # Enable Pipeline management tools
GITLAB_READ_ONLY_MODE=false # Restrict to read-only operations (security feature)
